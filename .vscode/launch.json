{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
        "args": [
          "--require",
          "@babel/register",
          "test/**/*.spec.js"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
  }
  